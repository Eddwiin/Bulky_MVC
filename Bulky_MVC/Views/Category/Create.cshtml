@model Category

<form method="POST">
    <div class="row">
        <h2 class="text-primary">Create new category</h2>
    </div>
    <div class="mb-3">
        <label>Category Name</label>
        <input asp-for="Name" type="text" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Display Order</label>
        <input asp-for="DisplayOrder" type="number" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">Back to link</a>
</form>